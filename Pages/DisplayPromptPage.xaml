<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppNewBiAulas.Pages.DisplayPromptPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="SeaGreen">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="SeaGreen" />
    </ContentPage.Behaviors>

    <ScrollView>
        <VerticalStackLayout Spacing="20"
                             Padding="10">

            <Image Source="shop.png"
                   Margin="0,100,0,0"
                   HeightRequest="100"
                   WidthRequest="100"></Image>

            <Label Text="Estudos do Pedro"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />

            <Button Text="Iniciar Atividade"
                    x:Name="btnIniciarAtividade"
                    FontAttributes="Bold"
                    FontSize="20"
                    CornerRadius="99"
                    TextColor="White"
                    Clicked="Button_Clicked" />

            <Button Text="Click-me"
                    Clicked="Button_Clicked"
                    CornerRadius="99" />

            <Button Text="Navegar"
                    Clicked="Button_Clicked_1" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>